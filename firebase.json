{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "redirects": [
      {
        "source": "/index.html",
        "destination": "/",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "prerender"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm run predeploy",
      "npm --prefix ./functions run build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
